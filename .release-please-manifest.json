{
  "release-type": "simple",
  "package-name": "SurfPlus",
  "bump-minor-pre-major": true,
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "pull-request-header": "## :robot: Release notes",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "docs",
      "section": "Documentation"
    },
    {
      "type": "chore",
      "section": "Chores"
    }
  ]
}
